{
    "name": "lanchas",
    "private": true,
    "packageManager": "pnpm@9.15.0",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "pnpm -r dev",
        "build": "pnpm -r build",
        "lint": "pnpm -r lint",
        "typecheck": "pnpm -r typecheck",
        "db:up": "docker compose up -d",
        "db:down": "docker compose down -v",
        "prisma:generate": "pnpm --filter @lanchas/prisma generate",
        "prisma:migrate": "pnpm --filter @lanchas/prisma migrate"
    }
}